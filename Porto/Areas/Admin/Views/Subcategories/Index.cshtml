@model List<Porto.Common.ViewModel.Chatbot.SubcategoryViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Subcategories";
}

<div class="form-container">
    <h2>Subcategories</h2>
    <a asp-action="Create" class="btn btn-primary mb-3">Add New Subcategory</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name (EN)</th>
                <th>Name (PT)</th>
                <th>Description (EN)</th>
                <th>Description (PT)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var sub in Model)
            {
                <tr>
                    <td>@sub.NameEn</td>
                    <td>@sub.NamePt</td>
                    <td>@sub.DescriptionEn</td>
                    <td>@sub.DescriptionPt</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@sub.Id" class="btn btn-sm btn-warning">Edit</a>
                        <form asp-action="Delete" asp-route-id="@sub.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
