@model List<Porto.Common.ViewModel.Chatbot.CategoryViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Categories";
}

<link rel="stylesheet" href="~/css/admin.css">

<div class="form-container">
    <h2>Categories</h2>

    <a asp-action="Create" asp-controller="Categories" class="btn btn-primary mb-3">Add New Category</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name (EN)</th>
                <th>Name (PT)</th>
                <th colspan="3">Action Buttons</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.NameEn</td>
                    <td>@c.NamePt</td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-sm btn-warning">Edit</a>
                    </td>
                    <td>
                        <form asp-action="Delete" asp-route-id="@c.Id" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure?')">
                                Delete
                            </button>
                        </form>
                        </td>
                        <td>
                        <a asp-action="Index" asp-controller="Subcategories"
                           asp-route-categoryId="@c.Id"
                           class="btn btn-sm btn-secondary">Subcategories</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
