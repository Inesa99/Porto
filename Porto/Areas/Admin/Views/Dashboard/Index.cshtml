@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Dashboard";
}
<link rel="stylesheet" href="~/css/admin.css">

<div class="dashboard">
    <div class="dashboard-header">
        <img src="~/Images/WorkHeader.png" alt="Dashboard Header" class="header-image">
        <div class="header-text">
            <h1>Welcome Back, Admin</h1>
            <p>Manage your platform with ease and efficiency</p>
        </div>
    </div>

    <div class="quick-actions-section">
        <div class="card-header">
            <h2>Quick Actions</h2>
        </div>
        <div class="card-body">
            <div class="quick-actions">
                <a asp-area="Admin" asp-controller="Event" asp-action="Add" class="btn-outline">
                    <i class="fas fa-plus"></i>
                    Add Event
                </a>
              
                <a asp-area="Admin" asp-controller="Message" asp-action="Index" class="btn-outline">
                    <i class="fas fa-envelope"></i>
                    View Messages
                </a>
            </div>
        </div>
    </div>

</div>
