@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Messages";
}
@model IEnumerable<Porto.Data.Models.ChatMessage>

<link rel="stylesheet" href="~/css/admin.css" />

<div class="form-container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Chat Messages</h2>
    </div>

    @if (Model != null && Model.Any())
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Message</th>
                    <th>Timestamp</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var message in Model)
                {
                    <tr>
                        <td>
                            <strong>@(message.User?.UserName ?? "Unknown User")</strong>
                        </td>
                        <td>
                            <div class="message-content">
                                @message.Message
                            </div>
                        </td>
                        <td>
                            <span class="timestamp">
                                @message.Timestamp.ToString("MMM dd, yyyy")
                                <br />
                                <small class="text-muted">@message.Timestamp.ToString("hh:mm tt")</small>
                            </span>
                        </td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@message.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this message?');">
                                    Delete
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="empty-state">
            <p>No messages found.</p>
        </div>
    }
</div>
