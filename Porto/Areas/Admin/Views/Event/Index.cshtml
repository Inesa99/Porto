@model List<Porto.Common.ViewModel.Events.EventViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Events";
}
<div>
<h2>Events</h2>

<a asp-action="Add" class="btn btn-primary mb-3">Add New Event</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date</th>
            <th>Location</th>
            <th>Organizer</th>
            <th>Contact Info</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var ev in Model)
        {
            <tr>
                <td>@ev.Name</td>
                <td>@ev.StartDate.ToString("yyyy-MM-dd")</td>
                <td>@ev.EndDate.ToString("yyyy-MM-dd")</td>
                <td>@ev.Location</td>
                <td>@ev.Organizer</td>
                <td>@ev.ContactInfo</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@ev.Id" class="btn btn-sm btn-warning">Edit</a>

                    <form asp-action="Delete" asp-route-id="@ev.Id" method="post" class="d-inline">
                        <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>