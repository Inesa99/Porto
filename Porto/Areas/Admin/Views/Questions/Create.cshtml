@model Porto.Common.ViewModel.Chatbot.QuestionViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Add Question";
    var subcategoryId = ViewBag.SubcategoryId;
}

<div class="form-container">
    <h2>@ViewData["Title"]</h2>

    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="SubcategoryId">Subcategory</label>
            <select asp-for="SubcategoryId" class="form-control" asp-items="ViewBag.Subcategories">
                <option value="">-- Select Subcategory --</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="QuestionEn"></label>
            <input asp-for="QuestionEn" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="QuestionPt"></label>
            <input asp-for="QuestionPt" class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="AnswerEn"></label>
            <textarea asp-for="AnswerEn" class="form-control"></textarea>
        </div>

        <div class="form-group">
            <label asp-for="AnswerPt"></label>
            <textarea asp-for="AnswerPt" class="form-control"></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>