@model List<Porto.Common.ViewModel.Chatbot.QuestionViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Manage Questions";
    var subcategoryId = ViewBag.SubcategoryId;
}

<link rel="stylesheet" href="~/css/admin.css">

<div class="form-container">
    <h2>Questions</h2>

    <a asp-action="Create"
       asp-route-subcategoryId="@subcategoryId"
       class="btn btn-primary mb-3">Add New Question</a>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Question (EN)</th>
                <th>Question (PT)</th>
                <th>Answer (EN)</th>
                <th>Answer (PT)</th>
                <th colspan="2">Action Buttons</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var q in Model)
            {
                <tr>
                    <td>@q.QuestionEn</td>
                    <td>@q.QuestionPt</td>
                    <td>@q.AnswerEn</td>
                    <td>@q.AnswerPt</td>

                    <td>
                        <a asp-action="Edit" asp-route-id="@q.Id" class="btn btn-sm btn-warning">Edit</a>
                        </td>
                        <td>
                        <form asp-action="Delete"
                              asp-route-id="@q.Id"
                              asp-route-subcategoryId="@subcategoryId"
                              method="post"
                              class="d-inline">
                            <button type="submit" class="btn btn-sm btn-danger"
                                    onclick="return confirm('Are you sure?')">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
