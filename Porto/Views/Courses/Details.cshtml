@model Porto.Data.Models.Course
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Courses Page";
    var currentCulture = Context.Request.Cookies["UserCulture"] ?? "en";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campana - Everything You Need to Live, Work & Belong</title>
    <link href="~/css/main.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/project.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />
   <link rel="stylesheet" href="~/css/details.css">

</head>

<body>
    <section class="hero-section project-hero">
        <div class="hero-overlay project-overlay"></div>
        <div class="container position-relative">
            <partial name="_menuPartial" />

            <div class="hero-content">
                <div class="hero-badge">Videos</div>
                <h1>Find What You Need to Live Comfortably in Porto</h1>
                <p class="hero-subtitle" style="font-size:18px;">
                    Looking for essential services in Porto?
                </p>
                <p class="hero-subtitle" style="margin-bottom:20px;">
                    <strong>Our smart chatbot is here to help!</strong>
                </p>
                <p class="hero-subtitle" style="font-size:18px;">Instantly find information about housing, education, healthcare, job opportunities, and more — all in one place. Just ask, and get the support you need in seconds.</p>
            </div>
        </div>
    </section>
    <section class="lessons-section py-5">
        <div class="container position-relative">
            <h2 class="mb-3">@Model.Title</h2>
            <p class="text-muted mb-4">Category: @Model.CourseType.Name</p>

            <div class="list-group lessons-list">
                @foreach (var cl in Model.CourseLessons.OrderBy(cl => cl.Lesson.Order))
                {
                    var lesson = cl.Lesson;
                    <button type="button" class="list-group-item list-group-item-action lesson-item shadow-sm mb-2"
                            data-bs-toggle="modal"
                            data-bs-target="#lessonModal-@lesson.Id">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="mb-1">@lesson.Title</h5>
                            <span class="badge bg-primary">@lesson.DurationSeconds  min</span>
                        </div>
                        <p class="mb-0 text-muted">@lesson.Description</p>
                    </button>

                    <!-- Modal -->
                    <div class="modal fade" id="lessonModal-@lesson.Id" tabindex="-1" aria-labelledby="lessonModalLabel-@lesson.Id" aria-hidden="true">
                        <div class="modal-dialog modal-lg modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title mb-1" style="color:black;">@lesson.Title</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body">
                                    <p>@lesson.Description</p>
                                    @if (!string.IsNullOrEmpty(lesson.MediaPath))
                                    {
                                        if (lesson.IsVideo)
                                        {
                                            <video width="100%" controls class="rounded">
                                                <source src="@lesson.MediaPath" type="video/mp4">
                                                Your browser does not support the video tag.
                                            </video>
                                        }
                                        else
                                        {
                                            <img src="@lesson.MediaPath" class="img-fluid rounded" alt="@lesson.Title" />
                                        }
                                    }
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <a asp-action="Index" class="btn btn-secondary mt-4">Back to Courses</a>
        </div>
    </section>
</body>
        @section Scripts {
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
        }
