@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home Page";
    var currentCulture = Context.Request.Cookies["UserCulture"] ?? "en";
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campana - Everything You Need to Live, Work & Belong</title>
    <link href="~/css/main.css" rel="stylesheet" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link rel="stylesheet" href="styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet" />


</head>

<body>
    <!-- Hero Section with Integrated Header -->
    <section class="hero-section">
        <div class="hero-overlay"></div>
        <div class="container position-relative">
            <!-- Header/Navigation -->
            <partial name="_menuPartial" />

            <!-- Hero Content -->
            <div class="row hero-content">
                <div class="col-lg-9">
                    <h1>Everything You Need to Live,<br> Work & Belong</h1>
                    <h1>— All in One Place.</h1>
                    <p>
                        Access social services, career opportunities, and community connections—everything you need in
                        Porto
                    </p>
                    <a href="@Url.Action("Integrate", "Home")" class="btn btn-light btn-lg">Get Started</a>
                </div>
            </div>
        </div>
    </section>
    <!-- Features Section -->
    <section class="features-section" id="features-section">
        <div class="container">
            <div class="features-grid">
                <!-- Live Feature -->
                <div class="feature-card live-card">
                    <div class="feature-content">
                        <h2>Live</h2>
                        <p>Find housing assistance, healthcare services, legal aid, and social support to build a secure and stable life in Porto.</p>
                        <a href=@Url.Action("Live") class="btn btn-primary">Explore</a>
                    </div>
                    <div class="feature-image image-live">
                        <img src="~/Images/porto1.png" alt="Live illustration" class="img-fluid">
                    </div>
                </div>

                <!-- Work Feature -->
                <div class="feature-card work-card">
                    <div class="feature-content">
                        <h2>Work</h2>
                        <p>Explore job opportunities and career guidance and to grow professionally.</p>
                        <a href=@Url.Action("Work") class="btn btn-primary">Explore</a>
                    </div>
                    <div class="feature-image  image-work">
                        <img src="~/Images/porto2.png" alt="Work illustration" class="img-fluid">
                    </div>
                </div>

                <!-- Integrate Feature -->
                <div class="feature-card integrate-card">
                    <div class="feature-image image-integrate">
                        <img src="~/Images/porto3.png" alt="Integrate illustration" class="img-fluid">
                    </div>
                    <div class="feature-content">
                        <h2>Integrate</h2>
                        <p>Meet new people, make connections, and become part of local communities.</p>
                        <a href=@Url.Action("Integrate") class="btn btn-primary">Explore</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Community Initiative Section -->
    <section class="community-section">
        <div class="container">
            <div class="row">
                <div class="col-lg-3">
                    <div class="community-logo"></div>
                </div>
                <div class="col-lg-9">
                    <h3>Part of the CommuniCity Initiative</h3>
                    <p>
                        This platform is developed as part of the CommuniCity project,
                        a European initiative dedicated to fostering inclusive digital
                        transformation in urban areas. By connecting technology providers,
                        local governments, and communities, CommuniCity creates smart,
                        people-centered solutions that improve urban living.
                    </p><br>
                    <p>
                        The project’s implementation has been supported by Porto Digital, driving digital
                        innovation in Porto, and Associação Do Porto De Paralisia Cerebral, ensuring strong
                        community engagement and inclusion. Their contributions have been essential in
                        shaping a platform that truly serves the needs of marginalized communities.
                        The Enterprise Incubator Foundation (EIF) has taken the lead in technical
                        implementation, leveraging its expertise in digital solutions and innovation.
                    </p>
                </div>
            </div>
        </div>
    </section>
    <!-- Blueprint Background Section -->
    <section class="blueprint-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-11">
                    <div class="implementation-box">
                        <img src="~/Images/eiflogo.png">
                        <div>
                            <h4>Implementing Body</h4>
                            <p>The Enterprise Incubator Foundation (EIF) is one of the largest innovation agencies in the region. Through its regional hubs — Gyumri Technology Center (GTC) and Vanadzor Technology Center (VTC) — EIF leverages its expertise in digital solutions, workforce training, and ecosystem development.</p>
                            <p>As the technical partner in this project, EIF ensures seamless platform development, digital accessibility, and user-centered design to create an impactful and inclusive experience.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Partners Section -->
    <section class="partners-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-2 col-4 mb-3">
                    <div class="partner-box">Partner<br>Logo Here</div>
                </div>
                <div class="col-md-2 col-4 mb-3">
                    <div class="partner-box">Partner<br>Logo Here</div>
                </div>
                <div class="col-md-2 col-4 mb-3">
                    <div class="partner-box">Partner<br>Logo Here</div>
                </div>
                <div class="col-md-2 col-4 mb-3">
                    <div class="partner-box">Partner<br>Logo Here</div>
                </div>
                <div class="col-md-2 col-4 mb-3">
                    <div class="partner-box">Partner<br>Logo Here</div>
                </div>
                <div class="col-md-2 col-4 mb-3">
                    <div class="partner-box">Partner<br>Logo Here</div>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact Section -->
    <section class="contact-section">
        <div class="container">
            <div class="contact-card">
                <div class="row">


                    <div class="col-lg-7 contact-form-col">
                        <form asp-action="ContactUs" asp-controller="Home" method="post">
                            <h2>
                                Contact Us
                           </h2>
                            <p class="contact-subtitle">
                                How can we help you?

                            </p>

                            <!-- Custom select group -->
                            <div class="contact-options">
                                <div class="option-btn active" data-value="@AppRes.IndividualUser">
                                    <div>@(AppRes.IndividualUser ?? "I'm an individual user")</div>
                                    <div class="option-subtitle">@(AppRes.IndividualUserText ?? "looking for support or information")</div>
                                </div>
                                <div class="option-btn" data-value="@AppRes.EventOrganizer">
                                    <div>I'm an event organizer</div>
                                    <div class="option-subtitle">wanting to share an opportunity</div>
                                </div>
                            </div>

                            <!-- Hidden input to simulate a <select> -->
                            <input type="hidden" name="userType" id="UserType" value="Individual" />


                            <div class="mb-3">
                                <input name="email" type="email" class="form-control" placeholder="Your Email" required>
                            </div>
                            <div class="mb-3">
                                <textarea name="message" class="form-control" rows="5" placeholder="Message" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary submit-btn">Submit</button>

                        </form>
                    </div>
                    <div class="col-lg-5 contact-image-col">
                        <img src="~/Images/porto4.png" alt="Angel with laptop illustration" class="img-fluid">
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- ✅ Success Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center border-0 shadow-lg p-4">
                <div class="modal-body">
                    <div class="icon-circle bg-opacity-25 mx-auto mb-3">
                        <i class="bi bi-check-circle-fill text-success animated-icon"></i>
                    </div>
                    <h4 class="fw-bold text-success mb-2">Message Sent!</h4>
                    <p>Your message has been sent successfully. We’ll get back to you soon.</p>
                    <button type="button" class="btn btn-success mt-3 px-4" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>

    <!-- ❌ Error Modal -->
    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content text-center border-0 shadow-lg p-4">
                <div class="modal-body">
                    <div class="icon-circle bg-danger bg-opacity-25 mx-auto mb-3">
                        <i class="bi bi-x-circle-fill text-danger animated-icon"></i>
                    </div>
                    <h4 class="fw-bold text-danger mb-2">Something Went Wrong</h4>
                    <p>We couldn’t send your message right now. Please try again later.</p>
                    <button type="button" class="btn btn-danger mt-3 px-4" data-bs-dismiss="modal">OK</button>
                </div>
            </div>
        </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        document.querySelectorAll('.option-btn').forEach(btn => {
            btn.addEventListener('click', () => {
                document.querySelectorAll('.option-btn').forEach(b => b.classList.remove('active'));

                btn.classList.add('active');

                document.getElementById('UserType').value = btn.getAttribute('data-value');
            });
        });
    </script>
 <script>
    document.addEventListener("DOMContentLoaded", function () {
        let modal;
        @if (TempData["Success"] != null)
        {
            @:modal = new bootstrap.Modal(document.getElementById('successModal'));
            @:modal.show();
        }
        else if (TempData["Error"] != null)
        {
            @:modal = new bootstrap.Modal(document.getElementById('errorModal'));
            @:modal.show();
        }

        if (modal) {
            setTimeout(() => modal.hide(), 4000);
        }
    });
</script>


</body>

</html>