@using Microsoft.AspNetCore.Identity
@inject SignInManager<Porto.Data.Models.ApplicationUser> SignInManager

@{
    ViewData["Title"] = "Work";
    var currentCulture = Context.Request.Cookies["UserCulture"] ?? "en";
}

<!DOCTYPE html>
<html>



<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Campana - Work Opportunities</title>
    <link href="~/css/main.css" rel="stylesheet" />
    <link href="~/css/work.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<style>
    .career-topic-item a {
        text-decoration: none;
        color: inherit;
    }
</style>
<body>
    <!-- Hero Section with Integrated Header -->
    <section class="hero-section work-hero">
        <div class="hero-overlay work-overlay"></div>
        <div class="container position-relative">
            <!-- Header/Navigation -->
            <partial name="_menuPartial" />

            <!-- Work Hero Content -->
            <div class="row work-hero-content">
                <div class="col-lg-7">
                    <div class="work-badge">Work</div>
                    <h1>Looking for a job? Need help with work-related questions? We're here for you!</h1>
                    <p class="work-subtitle">It doesn't matter if you are unemployed or looking for a better position.</p>
                    <p class="work-description">Chat with our AI Assistant for guidance on job searching, accessing employment opportunities, and securing a better future.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Training Programs Section -->
    <section class="training-section">
        <div class="container">
            <div class="training-content text-center">
                <h2>Explore free training programs to gain skills<br>for stable employment.</h2>
                <p>Whether you're looking for your first job or a better opportunity, we'll help you take the next step.</p>
                <a href="#" class="explore-trainings-btn">Explore Trainings</a>
            </div>
        </div>
    </section>

    <!-- AI Career Chat Section -->
    <section class="ai-chat-section">
        <div class="container">
            <h2 class="text-center">AI Career Chat – Get Job Advice Anytime</h2>
            <div class="chat-intro text-center">
                <h3>Not sure where to start?</h3>
                <p>Our AI Assistant can guide you on:</p>
            </div>

            <div class="career-topics">                      
            @if (SignInManager.IsSignedIn(User))
            {
                <div class="career-topic-item">
                    <a asp-controller="Bot" asp-action="Index" class="career-topic-btn">
                        How to find and apply for jobs <i class="fas fa-chevron-right"></i>
                    </a>
                </div>
                <div class="career-topic-item">
                    <a asp-controller="Bot" asp-action="Index" class="career-topic-btn">
                        Writing a simple CV & job application <i class="fas fa-chevron-right"></i>
                    </a>
                </div>
                <div class="career-topic-item">
                    <a asp-controller="Bot" asp-action="Index" class="career-topic-btn">
                        What to expect in interviews <i class="fas fa-chevron-right"></i>
                    </a>
                </div>
                <div class="career-topic-item">
                    <a asp-controller="Bot" asp-action="Index" class="career-topic-btn">
                        Workplace basics and workers' rights <i class="fas fa-chevron-right"></i>
                    </a>
                </div>
                <div class="career-topic-item">
                    <a asp-controller="Bot" asp-action="Index" class="career-topic-btn">
                        Training opportunities to help you get hired <i class="fas fa-chevron-right"></i>
                    </a>
                </div>
            <div class="chat-cta text-center">
                <p>Ask any job-related question and get instant support!</p>
                <a asp-controller="Bot" asp-action="Index" class="chat-assistant-btn">Chat With AI Career Assistant</a>
            </div>

            }
            else
            {

                    <div class="career-topic-item">
                        <button class="career-topic-btn" disabled>
                            How to find and apply for jobs <i class="fas fa-lock ms-2"></i>
                        </button>
                    </div>
                    <div class="career-topic-item">
                        <button class="career-topic-btn" disabled>
                            Writing a simple CV & job application <i class="fas fa-lock ms-2"></i>
                        </button>
                    </div>
                    <div class="career-topic-item">
                        <button class="career-topic-btn" disabled>
                            What to expect in interviews <i class="fas fa-lock ms-2"></i>
                        </button>
                    </div>
                    <div class="career-topic-item">
                        <button class="career-topic-btn" disabled>
                            Workplace basics and workers' rights <i class="fas fa-lock ms-2"></i>
                        </button>
                    </div>
                    <div class="career-topic-item">
                        <button class="career-topic-btn" disabled>
                            Training opportunities to help you get hired <i class="fas fa-lock ms-2"></i>
                        </button>
                    </div>

                
                <div class="chat-cta text-center">
                    <button class="chat-assistant-btn" disabled>Chat With AI Career Assistant</button>
                    <div class="chat-access-warning">
                        <span>Please <a asp-area="Identity" asp-page="/Account/Login">sign in</a> to access the chat.</span>
                    </div>
                </div>
            }
        </div>
        <div class="modal fade" id="cvModal" tabindex="-1" aria-labelledby="cvModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content text-center border-0 shadow-lg p-4">
                    <div class="modal-body">
                        <div class="icon-circle bg-success bg-opacity-25 mx-auto mb-3">
                            <i class="bi bi-check-circle-fill text-success animated-icon"></i>
                        </div>
                        <h4 class="fw-bold text-success mb-2">CV Submitted Successfully!</h4>
                        <p>Your CV has been uploaded. We’ll notify you about relevant job opportunities soon.</p>
                        <button type="button" class="btn btn-success mt-3 px-4" data-bs-dismiss="modal">OK</button>
                    </div>
                </div>
            </div>
        </div>

    </section>

    <!-- Submit CV Section -->
    <section class="submit-cv-section">
        <div class="container">
            <div class="cv-card">
                <div class="cv-card-content text-center">
                    <h2>Submit Your CV</h2>
                    <h2>Get Notified About Job Opportunities</h2>
                    <p>If you're looking for work, we can help!<br>Upload your CV and we'll connect you with job openings that match your skills and experience.</p>

                    <form asp-controller="Home" asp-action="SubmitCV" method="post" enctype="multipart/form-data" id="cvForm">
                        <div class="input-row">
                            <div class="email-input-container">
                                <input type="email" id="userEmail" name="email" class="form-control" placeholder="Your Email" required />
                            </div>
                            <div class="attach-btn-container">
                                <button type="button" class="attach-cv-btn" id="attachBtn">
                                    <i class="fas fa-paperclip"></i> Attach CV
                                </button>
                                <input type="file" name="cvFile" class="form-control" id="cvFile" hidden required />
                            </div>
                        </div>
                        <div class="submit-container">
                            <button type="submit" class="submit-btn">Submit</button>
                        </div>
                    </form>

                    <!-- Modal -->
                    <!-- Success Modal -->
                    <div class="modal fade" id="cvSuccessModal" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content text-center border-0 shadow-lg p-4">
                                <div class="modal-body">
                                    <div class="icon-circle bg-success bg-opacity-25 mx-auto mb-3">
                                        <i class="bi bi-check-circle-fill text-success animated-icon"></i>
                                    </div>
                                    <h4 class="fw-bold text-success mb-2">CV Submitted Successfully!</h4>
                                    <p>We received your CV. We'll notify you about job opportunities soon.</p>
                                    <button type="button" class="btn btn-success mt-3 px-4" data-bs-dismiss="modal">OK</button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Error Modal -->
                    <div class="modal fade" id="cvErrorModal" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content text-center border-0 shadow-lg p-4">
                                <div class="modal-body">
                                    <div class="icon-circle bg-danger bg-opacity-25 mx-auto mb-3">
                                        <i class="bi bi-x-circle-fill text-danger animated-icon"></i>
                                    </div>
                                    <h4 class="fw-bold text-danger mb-2">Submission Failed</h4>
                                    <p>We couldn’t send your CV. Please try again later.</p>
                                    <button type="button" class="btn btn-danger mt-3 px-4" data-bs-dismiss="modal">OK</button>
                                </div>
                            </div>
                        </div>
                    </div>


                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.getElementById('attachBtn').addEventListener('click', function () {
            document.getElementById('cvFile').click();
        });

    @if (TempData["CVSuccess"] != null)
    {
        @:new bootstrap.Modal(document.getElementById('cvSuccessModal')).show();
    }
    else if (TempData["CVError"] != null)
    {
        @:new bootstrap.Modal(document.getElementById('cvErrorModal')).show();
    }
    });
</script>



</html>
